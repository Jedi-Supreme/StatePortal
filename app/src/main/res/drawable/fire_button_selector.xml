<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval" >
            <gradient
                android:startColor="@color/oaPrimary"
                android:centerColor="@color/oaDark"
                android:endColor="@color/oaDark"
                android:angle="90"/>
            <stroke android:color="@color/oaPrimary"
                android:width="2dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="oval" >
            <gradient
                android:startColor="#F9A825"
                android:centerColor="#E65100"
                android:endColor="@color/oaDark"
                android:angle="270"/>
        </shape>
    </item>

</selector>