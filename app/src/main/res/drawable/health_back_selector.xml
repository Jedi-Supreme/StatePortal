<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="oval" >
            <gradient
                android:startColor="@color/stc_green"
                android:centerColor="@color/stc_dark_green"
                android:endColor="@color/stc_dark_green"
                android:angle="90"/>
            <stroke android:color="@color/stc_green"
                android:width="2dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="oval" >
            <gradient
                android:startColor="@color/stc_green"
                android:centerColor="@color/stc_dark_green"
                android:endColor="@color/stc_dark_green"
                android:angle="270"/>
        </shape>
    </item>


</selector>