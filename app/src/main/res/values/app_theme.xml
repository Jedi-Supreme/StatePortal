<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="custom_app_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/window_gradient</item>
    </style>

    <style name="edittext_style" >
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

    <style name="buttons_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_back_selector</item>
    </style>

    <style name="report_butons" parent="buttons_style">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/report_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="small_button" parent="buttons_style">
        <item name="android:layout_height">@dimen/small_button</item>
        <item name="android:layout_width">@dimen/small_button</item>
    </style>

    <style name="text_label">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/report_text</item>
        <item name="android:background">@drawable/window_gradient</item>
    </style>

    <style name="action_buttons">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="complain_style">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/stc_gold</item>
        <item name="android:background">@drawable/window_gradient</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/margin_tiny</item>
    </style>



</resources>